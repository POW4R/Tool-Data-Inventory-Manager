<Window x:Class="Tool_Data_Inventory_Manager.RegisterViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tool_Data_Inventory_Manager"
        mc:Ignorable="d"
        Title="RegisterViewModel" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Regisztráció" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,0,0,10">
            <!-- Név -->
            <Grid Margin="0,5">
                <TextBox x:Name="NameTextBox" Height="35" />
                <TextBlock Text="Teljes név" Foreground="Gray"
                           IsHitTestVisible="False"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=NameTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=NameTextBox}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=NameTextBox}" >
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=NameTextBox}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Email -->
            <Grid Margin="0,5">
                <TextBox x:Name="EmailTextBox" Height="35" />
                <TextBlock Text="Email cím" Foreground="Gray"
                           IsHitTestVisible="False"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=EmailTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=EmailTextBox}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Jelszó -->
            <Grid Margin="0,5">
                <PasswordBox x:Name="PasswordBox" Height="35" />
                <TextBlock Text="Jelszó" Foreground="Gray"
                           IsHitTestVisible="False"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Password, ElementName=PasswordBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Jelszó megerősítés -->
            <Grid Margin="0,5">
                <PasswordBox x:Name="ConfirmPasswordBox" Height="35" />
                <TextBlock Text="Jelszó megerősítése" Foreground="Gray"
                           IsHitTestVisible="False"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Password, ElementName=ConfirmPasswordBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Content="Regisztráció" Height="40" Margin="0,20,0,0"
                    Background="#0078D7" Foreground="White"
                    FontWeight="SemiBold" BorderBrush="{x:Null}" />
            <Button Content="Vissza" Height="40" Margin="0,20,0,0"
                     Foreground="Black" Click="Button_Click"
                    FontWeight="SemiBold" BorderBrush="{x:Null}" />
        </StackPanel>
    </Grid>

</Window>
