<Window x:Class="Tool_Data_Inventory_Manager.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtResponse" Grid.Row="0" Margin="0,0,0,10" Height="30"/>

        <Button Content="OK" Grid.Row="1" Width="80" Height="30" HorizontalAlignment="Right" Click="Ok_Click" Margin="0,24,29,-24"/>
    </Grid>
</Window>
