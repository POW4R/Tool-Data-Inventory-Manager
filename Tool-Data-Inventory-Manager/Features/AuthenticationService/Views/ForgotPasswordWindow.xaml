<Window x:Class="Tool_Data_Inventory_Manager.Features.AuthenticationService.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tool_Data_Inventory_Manager"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Forgot Password" Height="400" Width="650"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Tool-Data-Icon.png">
    <Border Width="650"
            Height="400"
            Background="White"
            CornerRadius="6">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                              Direction="-90" 
                              RenderingBias="Quality" 
                              ShadowDepth="2" 
                              Color="Gray" />
        </Border.Effect>
        <StackPanel Orientation="Vertical"
                    Margin="10,20,10,20">
            <TextBlock Text="Forgot Password" 
                       FontSize="25"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontWeight="Bold"
                       Padding="10"/>
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Email:" 
                           Grid.Row="0"
                           Margin="89,20,0,5"
                           HorizontalAlignment="Left"/>
                <TextBox Name="tb_Email"
                         Grid.Row="0"
                         Padding="0,5"
                         Width="254"
                         BorderThickness="0,0,0,1"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,10"/>

                <TextBlock Text="Temporary Code:" 
                           Grid.Row="2"
                           Margin="89,20,0,5"
                           HorizontalAlignment="Left"/>
                <TextBox Name="tb_Code"
                         Grid.Row="2"
                         Padding="0,5"
                         Width="254"
                         BorderThickness="0,0,0,1"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,10"/>

                <Button x:Name="btn_SendCode"
                        Content="Send Code"
                        Grid.Row="1"
                        Margin="0,10,0,10"
                        Width="200"
                        HorizontalAlignment="Center"
                        Click="btn_SendCode_Click"/>
                <Button x:Name="btn_VerifyCode"
                        Content="Verify Code"
                        Grid.Row="3"
                        Margin="0,10,0,10"
                        Width="200"
                        HorizontalAlignment="Center"
                        Click="btn_VerifyCode_Click"/>
            </Grid>

            <Button Content="Back"
                   x:Name="btn_Back"
                   Margin="0,20,0,0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Width="100"
                   Click="btn_Back_Click"/>
        </StackPanel>
    </Border>
</Window>
