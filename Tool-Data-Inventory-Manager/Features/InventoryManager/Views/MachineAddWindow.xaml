<Window x:Class="Tool_Data_Inventory_Manager.Features.InventoryManager.Views.MachineAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új Gép Hozzáadása" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Gép neve:" Margin="0,0,0,5"/>
            <TextBox x:Name="MachineNameTextBox" />
        </StackPanel>

        <GroupBox Header="Termékek kiválasztása" Grid.Row="1" Margin="0,0,0,10">
            <ScrollViewer>
                <ListBox x:Name="ProductListBox" SelectionMode="Extended" DisplayMemberPath="ProductNumber"/>
            </ScrollViewer>
        </GroupBox>

        <Button Grid.Row="2" Content="Hozzáadás" Click="AddMachineButton_Click" HorizontalAlignment="Right" Width="100"/>
    </Grid>
</Window>
