<Window x:Class="Tool_Data_Inventory_Manager.Features.InventoryManager.Views.EditMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gép szerkesztése" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Gép neve:"/>
            <TextBox x:Name="MachineNameTextBox" Margin="0 0 0 10"/>

            <Label Content="Hozzárendelt termékek:"/>
            <ListBox x:Name="ProductListBox" SelectionMode="Extended" DisplayMemberPath="ProductNumber" Height="150"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Mentés" Click="SaveButton_Click" Width="80" Margin="0 0 10 0"/>
            <Button Content="Mégse" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
