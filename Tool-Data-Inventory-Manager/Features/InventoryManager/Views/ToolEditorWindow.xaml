<Window x:Class="Tool_Data_Inventory_Manager.Features.InventoryManager.Views.ToolEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tool szerkesztése" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Név:" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="80,0,0,5"/>

        <Label Content="Material Number:" Grid.Row="1"/>
        <TextBox x:Name="MaterialNumberTextBox" Grid.Row="1" Margin="80,0,0,5"/>

        <Label Content="Mag Place:" Grid.Row="2"/>
        <TextBox x:Name="MagPlaceTextBox" Grid.Row="2" Margin="80,0,0,5"/>

        <Label Content="Ár (€):" Grid.Row="3"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="3" Margin="80,0,0,5"/>

        <!-- Új: Kategóriák -->
        <GroupBox Header="Kategóriák" Grid.Row="4" Margin="0,10,0,0">
            <WrapPanel Margin="10" VerticalAlignment="Top">
                <CheckBox Content="Nagyolómaró" x:Name="CheckNagyolomaro" Margin="5"/>
                <CheckBox Content="Sorjázómaró" x:Name="CheckSorjazomaro" Margin="5"/>
                <CheckBox Content="Simítómaró" x:Name="CheckSimitomaro" Margin="5"/>
                <CheckBox Content="Nagyoló maró I." x:Name="CheckNagyoloI" Margin="5"/>
                <CheckBox Content="Nagyoló maró II." x:Name="CheckNagyoloII" Margin="5"/>
                <CheckBox Content="Simítómaró" x:Name="CheckSimito2" Margin="5"/>
                <CheckBox Content="Előfúró" x:Name="CheckElofuro" Margin="5"/>
                <CheckBox Content="Csigafúró" x:Name="CheckCsigafuro" Margin="5"/>
            </WrapPanel>
        </GroupBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Mentés" Width="80" Click="Save_Click" Margin="5"/>
            <Button Content="Mégse" Width="80" Click="Cancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
