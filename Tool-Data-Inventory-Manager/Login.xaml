<Window x:Class="Tool_Data_Inventory_Manager.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tool_Data_Inventory_Manager"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="650"
        WindowStartupLocation="CenterScreen">

    <Grid RenderTransformOrigin="0.524,0.414" HorizontalAlignment="Center" Width="800" Height="434" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="195*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Eamil:" Grid.Row="3" Margin="194,52,100,-29"/>
        <TextBox Grid.Row="3" Margin="194,75,359,-52" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2"/>

        <TextBlock Text="Jelszó:" Grid.Row="3" Margin="194,126,122,-103" RenderTransformOrigin="2.009,1.228"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="194,149,359,-126" Grid.ColumnSpan="2" />
        <Button Content="Bejelentkezés" Grid.Row="3" Margin="315,200,359,-183" Click="LoginButton_Click" RenderTransformOrigin="-1.755,4.125" Grid.ColumnSpan="2"/>
        <Button Content="Vissza" x:Name="btn_back" Grid.Row="3" Margin="211,338,0,-318" Click="btn_back_Click" HorizontalAlignment="Left" Width="126" RenderTransformOrigin="0.5,0.5" Background="#FFDDDDDD" Grid.Column="1"/>
    </Grid>
</Window>
