<Window x:Class="Tool_Data_Inventory_Manager.AddMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Machine" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
>
    <Border Background="White" CornerRadius="10" Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Grid Margin="0,20">
                <TextBox x:Name="tb_MachineName"
                         Width="250"
                         Height="30"
                         VerticalContentAlignment="Center"
                         BorderThickness="0,0,0,1"
                         FontSize="14"/>
                <TextBlock Text="Enter machine name"
                           Margin="10,0,0,0"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           FontSize="14"
                           Visibility="{Binding Text.IsEmpty, ElementName=tb_MachineName, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <TextBlock x:Name="txt_Status"
                       Text=""
                       Foreground="Green"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                <Button x:Name="btn_Add"
                        Content="Add"
                        Width="100"
                        Margin="5"
                        Click="btn_Add_Click"
                        />
                <Button x:Name="btn_Back"
                        Content="Back"
                        Width="100"
                        Margin="5"
                        Click="btn_Back_Click"
                        />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
